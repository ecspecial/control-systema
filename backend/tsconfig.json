{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@filters": ["libs/filters"],
      "@filters/*": ["libs/filters/*"],
      "@infra": ["libs/infrastructure"],
      "@infra/*": ["libs/infrastructure/*"],
      "@interceptors": ["libs/interceptors"],
      "@interceptors/*": ["libs/interceptors/*"],
      "@shared": ["libs/shared"],
      "@shared/*": ["libs/shared/*"],
      "@modules/*": ["src/*"]
    }
  }
}
